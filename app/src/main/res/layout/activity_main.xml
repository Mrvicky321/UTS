<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#F4F0F0">

    <LinearLayout
        android:layout_width="407dp"
        android:layout_height="492dp"
        android:layout_marginLeft="1dp"
        android:background="#F8F4F4">

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="272dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="60dp"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:layout_width="120dp"
                android:layout_height="22dp"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="15dp"
                android:text="LOGIN WITH"
                android:textColor="#FF5722"
                android:textSize="14sp" />

            <RadioGroup
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="19dp"
                android:orientation="horizontal"
                >

                <RadioButton
                    android:layout_width="290dp"
                    android:layout_height="match_parent"
                    android:text="PASSWORD"
                    android:textSize="9sp"
                    />

                <RadioButton
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="-130dp"
                    android:text="OTP"
                    android:textSize="9sp" />

            </RadioGroup>


            <EditText
                android:layout_width="290dp"
                android:layout_height="40dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="1dp"
                android:backgroundTint="#FF5722"
                android:hint="Mobile Number"
                android:textSize="11sp" />

            <EditText
                android:layout_width="290dp"
                android:layout_height="40dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="1dp"
                android:backgroundTint="#FF5722"
                android:hint="Password"
                android:inputType="textPassword"
                android:textSize="11sp" />

            <CheckBox
                android:layout_width="150dp"
                android:layout_height="20dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="5dp"
                android:text="Remember Password"
                android:textColorHint="#FF5722"
                android:textSize="8sp" />

            <TextView
                android:layout_width="120dp"
                android:layout_height="20dp"
                android:layout_marginLeft="230dp"
                android:layout_marginTop="-18dp"
                android:text="Forgot Password?"
                android:textSize="8sp" />

            <Button
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="#FF5722"
                android:text="LOGIN"
                android:textSize="9sp" />


        </LinearLayout>

        <TextView
            android:id="@+id/textView"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-400dp"
            android:layout_marginTop="350dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Dont't have an account?"
            android:textSize="9sp" />


    </LinearLayout>
    <Button
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:text="REGISTER"
        android:layout_marginTop="380dp"
        android:layout_marginLeft="-300dp"
        android:backgroundTint="#FF5722"
        android:textSize="9sp"/>

    <LinearLayout
        android:layout_width="410dp"
        android:layout_height="47dp"
        android:layout_marginLeft="-269dp"
        android:background="#FF5722">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="350dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/baseline_circle_notifications_24"
            android:backgroundTint="#6F1212"/>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginLeft="-369dp"
            android:scrollbarSize="80dp"
            android:src="@drawable/uts_logo"
            android:layout_marginTop="4dp"/>

        <TextView
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_marginLeft="11dp"
            android:text="UTS"
            android:textColor="@color/white"
            android:textSize="10sp" />

        <TextView
            android:layout_width="180dp"
            android:layout_height="20dp"
            android:layout_marginLeft="-39dp"
            android:layout_marginTop="20dp"
            android:text="IR Unreserved Ticketing"
            android:textColor="@color/white"
            android:textSize="11dp" />


    </LinearLayout>




</LinearLayout>